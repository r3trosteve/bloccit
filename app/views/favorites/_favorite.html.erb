<div class="favorite">
  <% if favorite = current_user.favorited(post) %>
    Favorited
  <% else %>
    Want to favorite this?
    <%= link_to [topic, post, Favorite.new], class: 'btn btn-small', method: :post do %>
	  <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
	<% end %>
  <% end %>
</div>