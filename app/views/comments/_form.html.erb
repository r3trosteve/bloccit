<%= form_for [topic, post, comment], html: { class: 'form-horizontal' }, remote: true do |f| %>

  <% if comment.errors.any? %>
    <div class="alert alert-block">
      <h4>There are <%= pluralize(comment.errors.count, "error") %> errors.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= control_group_tag(comment.errors[:body]) do %>
    <%= f.label "Comment", class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, placeholder: "Make your comments...", rows: 8 %>
    </div>
  <% end %>
  <div class="control-group form-group">
    <div class="controls">
      <%= f.submit "Add Comment", class: 'btn-success' %>
    </div>
  </div>
<% end %>