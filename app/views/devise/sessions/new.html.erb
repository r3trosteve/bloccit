<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3'}) do |f| %>
  <%= devise_error_messages! %>
  <div class="control-group form-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>
  <div class="control-group form-group">
    <%= f.label :password, class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group form-group">
    <div class="controls">
      <%= f.submit "Sign in", class: 'btn btn-success' %>
    </div>
  </div>
  <div class="control-group form-group">
    <div class="controls">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
