<div class="row">
	<h1 class="page-title col-sm-11 col-md-11">All Posts</h1>
	<% if can? :create, Post %>
		<%= link_to "New Post", new_post_path, class: 'btn btn-primary btn-mini col-sm-1 col-md-1' %>
	<% end %>
</div>

<div class="row">
<div class="col-sm-3 col-md-3">
	<ul class="list-group">
		<li class="list-group-item"><a href ="#">Link 1</a></li>
		<li class="list-group-item"><a href ="#">Link 2</a></li>
		<li class="list-group-item"><a href ="#">Link 3</a></li>
		<li class="list-group-item"><a href ="#">Link 4</a></li>
		<li class="list-group-item"><a href ="#">Link 5</a></li>
	</ul>
</div>
<div class="posts-container col-sm-9 col-md-9">
<% @posts.each do |post| %>

  <div class="media post-card">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title, post %>
      </h4>
      <small>
        submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %><br/>
        <%= post.comments.count %> Comments
      </small>
    </div>
  </div>
<% end %>
</div>
</div>
