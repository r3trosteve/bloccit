<% if can? :create, Vote %>
  <div><%= link_to " ", topic_post_up_vote_path(post.topic, post), class: "glyphicon glyphicon-chevron-up #{(current_user.voted(post) && current_user.voted(post).up_vote?) ? 'voted' : ''}" %></div>
  <div class="vote-count"><strong><%= post.points_total %></strong></div>
  <div><%= link_to " ", topic_post_down_vote_path(post.topic, post), class: "glyphicon glyphicon-chevron-down #{(current_user.voted(post) && current_user.voted(post).down_vote?) ? 'voted' : ''}" %></div>
  <% else %>
  <div><%= link_to " ", "#", class: 'glyphicon glyphicon-chevron-up' %></div>
  <div class="vote-count"><strong><%= post.points_total %></strong></div>
  <div><%= link_to " ", "#", class: 'glyphicon glyphicon-chevron-down' %></div>
<% end %>